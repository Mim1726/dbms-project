<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-calendar-event"></i> All Elections</h2>
                <% if (userType === 'voter') { %>
                    <a href="/voter/dashboard" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                <% } %>
            </div>

            <!-- Elections Grid -->
            <% if (elections && elections.length > 0) { %>
                <div class="row">
                    <% elections.forEach(election => { %>
                        <div class="col-lg-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0"><%= election.name %></h5>
                                    <% 
                                    let statusClass = 'secondary';
                                    let statusText = 'Inactive';
                                    
                                    if (election.is_active === 'Y') {
                                        const now = new Date();
                                        const votingStart = election.voting_start ? new Date(election.voting_start) : null;
                                        const votingEnd = election.voting_end ? new Date(election.voting_end) : null;
                                        
                                        if (votingStart && votingEnd) {
                                            if (now < votingStart) {
                                                statusClass = 'warning';
                                                statusText = 'Upcoming';
                                            } else if (now >= votingStart && now <= votingEnd) {
                                                statusClass = 'success';
                                                statusText = 'Active';
                                            } else {
                                                statusClass = 'danger';
                                                statusText = 'Ended';
                                            }
                                        } else {
                                            statusClass = 'info';
                                            statusText = 'Scheduled';
                                        }
                                    }
                                    %>
                                    <span class="badge bg-<%= statusClass %>"><%= statusText %></span>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p class="card-text"><%= election.description || 'No description available' %></p>
                                            
                                            <ul class="list-unstyled">
                                                <li>
                                                    <i class="bi bi-tag text-muted"></i>
                                                    <strong>Type:</strong> <%= election.election_type %>
                                                </li>
                                                <li>
                                                    <i class="bi bi-calendar3 text-muted"></i>
                                                    <strong>Date:</strong> <%= new Date(election.election_date).toLocaleDateString() %>
                                                </li>
                                                <% if (election.admin_name) { %>
                                                    <li>
                                                        <i class="bi bi-person-gear text-muted"></i>
                                                        <strong>Admin:</strong> <%= election.admin_name %>
                                                    </li>
                                                <% } %>
                                            </ul>

                                            <% if (election.voting_start && election.voting_end) { %>
                                                <div class="mt-3">
                                                    <h6>Voting Schedule:</h6>
                                                    <small class="text-muted">
                                                        <i class="bi bi-clock"></i>
                                                        <strong>Start:</strong> <%= new Date(election.voting_start).toLocaleString() %><br>
                                                        <i class="bi bi-clock"></i>
                                                        <strong>End:</strong> <%= new Date(election.voting_end).toLocaleString() %>
                                                    </small>
                                                </div>
                                            <% } %>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <div class="d-flex flex-column gap-2">
                                                <a href="/election/<%= election.election_id %>" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                                
                                                <% if (userType === 'voter' && statusText === 'Active') { %>
                                                    <a href="/voter/elections/<%= election.election_id %>/vote" class="btn btn-success btn-sm">
                                                        <i class="bi bi-check-circle"></i> Vote Now
                                                    </a>
                                                <% } %>
                                                
                                                <% if (userType === 'admin') { %>
                                                    <div class="btn-group-vertical">
                                                        <button class="btn btn-info btn-sm" onclick="generateResults(<%= election.election_id %>)">
                                                            <i class="bi bi-bar-chart"></i> Results
                                                        </button>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-muted">
                                    <small>
                                        Election ID: <%= election.election_id %>
                                        <% if (election.has_voted > 0) { %>
                                            <span class="badge bg-success ms-2">Voted</span>
                                        <% } %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">No Elections Available</h4>
                            <p>There are currently no elections to display.</p>
                            <% if (userType === 'admin') { %>
                                <a href="/admin/elections/create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create New Election
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<% if (userType === 'admin') { %>
<script>
function generateResults(electionId) {
    if (confirm('Generate results for this election? This will calculate vote counts and update the results table.')) {
        fetch(`/admin/elections/${electionId}/generate-results`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.message) {
                alert('Results generated successfully!');
                location.reload();
            } else {
                alert('Failed to generate results.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while generating results.');
        });
    }
}
</script>
<% } %>

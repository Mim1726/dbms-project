<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Online Voting System</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-check2-square"></i> Online Voting System
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/elections">Elections</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/results">Results</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <% if (typeof userType !== 'undefined' && userType === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/dashboard">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            </li>
                        <% } else if (typeof userType !== 'undefined' && userType === 'voter') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/voter/dashboard">
                                    <i class="bi bi-person-circle"></i> My Dashboard
                                </a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <form action="/auth/logout" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="py-4">
        <div class="container">
    <!-- Hero Section -->
    <div class="jumbotron bg-primary text-white text-center py-5 mb-5 rounded">
        <div class="container">
            <h1 class="display-4">
                <i class="bi bi-check2-square"></i> Online Voting System
            </h1>
            <p class="lead">Your voice matters. Vote securely, transparently, and conveniently.</p>
            <% if (typeof user === 'undefined' || !user) { %>
                <a class="btn btn-light btn-lg" href="/register" role="button">
                    <i class="bi bi-person-plus"></i> Register to Vote
                </a>
                <a class="btn btn-outline-light btn-lg ms-2" href="/login" role="button">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
            <% } %>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <i class="bi bi-calendar-event text-primary" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2"><%= stats.active_elections || 0 %></h5>
                    <p class="card-text">Active Elections</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <i class="bi bi-people text-success" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2"><%= stats.verified_voters || 0 %></h5>
                    <p class="card-text">Verified Voters</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <i class="bi bi-person-badge text-warning" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2"><%= stats.total_candidates || 0 %></h5>
                    <p class="card-text">Total Candidates</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-info">
                <div class="card-body">
                    <i class="bi bi-check-square text-info" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2"><%= stats.total_votes || 0 %></h5>
                    <p class="card-text">Total Votes Cast</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Elections -->
    <div class="row">
        <div class="col-lg-8">
            <h2><i class="bi bi-calendar-check"></i> Active Elections</h2>
            <% if (elections && elections.length > 0) { %>
                <% elections.forEach(election => { %>
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><%= election.name %></h5>
                            <span class="badge bg-success">Active</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="card-text"><%= election.description %></p>
                                    <p class="text-muted">
                                        <small>
                                            <i class="bi bi-calendar3"></i> Election Date: <%= new Date(election.election_date).toLocaleDateString() %>
                                        </small>
                                    </p>
                                    <% if (election.voting_start && election.voting_end) { %>
                                        <p class="text-muted">
                                            <small>
                                                <i class="bi bi-clock"></i> 
                                                Voting: <%= new Date(election.voting_start).toLocaleString() %> - 
                                                <%= new Date(election.voting_end).toLocaleString() %>
                                            </small>
                                        </p>
                                    <% } %>
                                </div>
                                <div class="col-md-4 text-end">
                                    <span class="badge bg-secondary"><%= election.election_type %></span>
                                    <div class="mt-2">
                                        <a href="/election/<%= election.election_id %>" class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No active elections at the moment.
                </div>
            <% } %>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> How to Vote</h5>
                </div>
                <div class="card-body">
                    <ol>
                        <li>Register as a voter</li>
                        <li>Wait for admin verification</li>
                        <li>Log in to your account</li>
                        <li>Browse active elections</li>
                        <li>Cast your vote securely</li>
                        <li>View results after voting ends</li>
                    </ol>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="bi bi-shield-check"></i> Security Features</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> Secure authentication</li>
                        <li><i class="bi bi-check-circle text-success"></i> One vote per election</li>
                        <li><i class="bi bi-check-circle text-success"></i> Anonymous voting</li>
                        <li><i class="bi bi-check-circle text-success"></i> Audit trail</li>
                        <li><i class="bi bi-check-circle text-success"></i> Real-time monitoring</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Online Voting System</h5>
                    <p>Secure, transparent, and accessible digital democracy.</p>
                </div>
                <div class="col-md-6">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-light">Home</a></li>
                        <li><a href="/elections" class="text-light">Elections</a></li>
                        <li><a href="/results" class="text-light">Results</a></li>
                        <li><a href="/about" class="text-light">About</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; 2025 Online Voting System. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
</body>
</html>
